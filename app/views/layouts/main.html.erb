<!DOCTYPE html>
<html>
  <head>
    <title>PrideFriends</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="container">
    <div class="row">
      <div class="col">
      <a href="/">
        <%= image_tag('pride_friends.png') %>
        </a>
      </div>
      <div class="col" id="content">  
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
        <%= yield %>
      </div>
    </div>
  <div class="nav-bar">
    <%= button_to "log in", user_session_path, :method => "get", :class => "button" %>
    <% if current_user %>
    <%= button_to "log out", destroy_user_session_path, :method => "delete", :class => "button" %>
    <%= button_to "connections", connections_path, :method => "get", :class => "button" %>
    <% end %>
  </div>  
</div>
  </body>
</html>
